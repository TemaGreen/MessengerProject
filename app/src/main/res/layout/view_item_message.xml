<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="КАКОЙ ТО ТЕКСТ СООБЩЕНИЯ ОЧЕНЬ ОЧЕНЬ ОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬОЧЕНЬ длинный текст сообщения"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toTopOf="@id/timeMessage"
            app:layout_constraintEnd_toStartOf="@+id/frameLayoutAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/frameLayoutAvatar" />

        <TextView
            android:id="@+id/timeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textMessage" />

        <FrameLayout
            android:id="@+id/frameLayoutAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user_1" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>